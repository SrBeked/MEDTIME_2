@model MedicalAppointmentSystem.Models.Appointment

<h1 class="text-danger">Delete Appointment</h1>

<p>Are you sure you want to delete this appointment?</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Patient: @Model.PatientName</h5>
        <p class="card-text">Doctor: @Model.DoctorName</p>
        <p class="card-text">Date: @Model.AppointmentDate.ToString("g")</p>
        <p class="card-text">Status: @Model.Status</p>
    </div>
</div>

<form method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Appointments" class="btn btn-secondary">Cancel</a>
</form>
