@model IEnumerable<MedicalAppointmentSystem.Models.Appointment>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary">Appointments</h1>
    <a href="/Appointments/Create" class="btn btn-success">Create New Appointment</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.PatientName</td>
                <td>@appointment.DoctorName</td>
                <td>@appointment.AppointmentDate.ToString("g")</td>
                <td>@appointment.Status</td>
                <td>
                    <a href="/Appointments/Edit/@appointment.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Appointments/Delete/@appointment.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
